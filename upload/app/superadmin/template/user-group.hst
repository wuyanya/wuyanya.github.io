<script>
	$(function() {
		TextboxAndCheckbox("input[name='quanxian']", "input[class='qx-checkbox'][type='checkbox']");
		if(Cnum($_URI['ID'])) {
			$('#delbtn').removeClass('pk-hide');
		}
		labelStrSwitch('input[name="data-htmlcodemarks"]', '><', false, '<', '>');
		labelStrSwitch('input[name="data-signcodemarks"]', '><', false, '<', '>');
		$('#SubmitBtn').data({
			before: function() {
				$('input[name="readlevel"]').val(Cnum($('input[name="readlevel"]').val()));
				var strs = {
					usergroupname: '用户组名称'
				};
				for(var i in strs) {
					if(!trim($('input[name="' + i + '"]').val())) {
						ppp({
							type: 3,
							icon: 2,
							content: strs[i] + "不能为空"
						});
						submitReturn = true;
						$('input[name="' + i + '"]').focus();
						return false;
					}
				}
				labelStrSwitch('input[name="data-htmlcodemarks"]', '><', true, '<', '>');
				labelStrSwitch('input[name="data-signcodemarks"]', '><', true, '<', '>');
			},
			after: function() {
				labelStrSwitch('input[name="data-htmlcodemarks"]', '><', false, '<', '>');
				labelStrSwitch('input[name="data-signcodemarks"]', '><', false, '<', '>');
				if(!Cnum($_URI['ID'])) {
					setTimeout(function() {
						location.reload();
					}, 1200);
				}
			}
		});
		$('#delbtn').on('click', function() {
			ppp({
				type: 1,
				content: "确认删除该用户组吗？",
				shade: 1,
				submit: function() {
					$.getJSON('index.php', {
						c: "app",
						a: "superadmin",
						s: "delete",
						table: "usergroup",
						id: $_URI['ID'],
						chkcsrfval: $_USER['CHKCSRFVAL'],
						json: 1
					}, function(data) {
						if(data['state'] == 'ok') {
							ppp({
								type: 3,
								icon: 1,
								content: "删除成功",
								close: function() {
									location.href = 'index.php?c=app&a=superadmin:index&s=user&t=group';
								}
							});
						} else {
							ppp({
								icon: 2,
								content: data['datas']['msg']
							});
						}
					});
				}
			});
		});
	});
</script>