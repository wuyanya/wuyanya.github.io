<form name="form_save" method="post" action="index.php?c=app&a=superadmin:index&s=save&os={$_G['GET']['S']}&ot={$_G['GET']['T']}&table=set">
	<div class="pk-row pk-padding-bottom-15 pk-margin-bottom-15" style="border-bottom:solid 1px #458fce">
		<label class="pk-w-sm-3 _labeltext pk-text-primary">验证码插件 应用设置</label>
		<div class="pk-w-sm-8"></div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">功能开关</label>
		<div class="pk-w-sm-8">
			<select class="pk-textbox" data-value="{$_G['SET']['APP_VERIFYCODE_LOAD']}" name="app_verifycode_load">
				<option value="0">关闭</option>
				<option value="1">开启</option>
			</select>
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">开启点击验证</label>
		<div class="pk-w-sm-8">
			<select class="pk-textbox" data-value="{$_G['SET']['APP_VERIFYCODE_OPENSLIDING']}" name="app_verifycode_opensliding">
				<option value="0">关闭</option>
				<option value="1">开启（安全系数低，根据自身情况开启）</option>
			</select>
		</div>
	</div>

	<div class="pk-row pk-padding-bottom-15">
		<label class="pk-w-sm-3 _labeltext">需验证页面</label>
		<div class="pk-w-sm-8 pk-text-sm">
			<input type="hidden" name="app_verifycode_page" value="{$_G['SET']['APP_VERIFYCODE_PAGE']}" readonly class="pk-textbox">
			<div class="pk-row pk-padding-top-10">
				<div class="pk-w-sm-6">
					<label class="am-checkbox-inline am-padding-top-0">
							<input class="qx-checkbox" type="checkbox" value="login"> 登录
						</label>
				</div>
				<div class="pk-w-sm-6">
					<label class="am-checkbox-inline am-padding-top-0">
